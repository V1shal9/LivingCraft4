CREATE VIEW viewproduct AS SELECT c.CATEGORYNAME , sc.SUBCATEGORYNAME ,s.SUPPLIERNAME,p.PRODUCTID ,p.PRODUCTNAME ,p.PRODUCTPRICE ,p.PRODUCTDESCRIPTION ,p.PRODUCTDISCOUNT ,p.PRODUCTQUANTITY   
FROM CATEGORY  c,SUBCATEGORY  sc,SUPPLIER  s,PRODUCT p 
WHERE p.CATEGORYID =c.CATEGORYID  and p.SUBCATEGORYID =sc.SUBCATEGORYID and p.SUPPLIERID =s.SUPPLIERID;